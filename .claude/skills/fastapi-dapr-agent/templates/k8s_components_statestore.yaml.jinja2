apiVersion: dapr.io/v1alpha1
kind: Component
metadata:
  name: state-store
  labels:
    app: {{ service_name }}
spec:
  type: state.redis
  version: v1
  metadata:
  - name: redisHost
    value: "redis:6379"
  - name: redisPassword
    secretKeyRef:
      name: redis-password
      key: password
  - name: keyPrefix
    value: "{{ service_name }}"
scopes:
  {{ service_name }}: true
