"""
FastAPI application main module for {{ service_name }}.
"""
import logging
from contextlib import asynccontextmanager

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

{% if has_health %}
from app.api.health import router as health_router
{% endif %}
{% if has_pubsub %}
from app.api.events import register_subscribers
{% endif %}
from app.core.config import settings
from app.core.logging import setup_logging

# Setup logging
setup_logging()
log = logging.getLogger(__name__)


@asynccontextmanager
async def lifespan(app: FastAPI):
    """Application lifespan management."""
    log.info(f"Starting {{ service_title }} v{{ version }}")
    yield
    log.info(f"Shutting down {{ service_title }}")


# Create FastAPI app
app = FastAPI(
    title="{{ service_title }}",
    description="{{ description }}",
    version="{{ version }}",
    lifespan=lifespan,
)

# CORS middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # Configure appropriately for production
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

{% if has_health %}
# Include routers
app.include_router(health_router, tags=["Health"])
{% endif %}

{% if has_pubsub %}
# Register Dapr pub/sub subscribers
register_subscribers(app)
{% endif %}


@app.get("/")
async def root():
    """Root endpoint."""
    return {
        "service": "{{ service_name }}",
        "version": "{{ version }}",
        "status": "running"
    }


if __name__ == "__main__":
    import uvicorn
    uvicorn.run(
        "app.main:app",
        host=settings.HOST,
        port=settings.PORT,
        reload=settings.DEBUG,
        log_level=settings.LOG_LEVEL.lower(),
    )
